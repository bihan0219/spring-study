<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="user1" class="com.bihan.springstudy.User">
        <property name="name" value="bihan she"></property>
        <property name="age" value="12"></property>
        <property name="address" ref="address1"></property>
    </bean>

    <bean id="user2" class="com.bihan.springstudy.User">
        <property name="name" value="shuai gao"></property>
        <property name="age" value="11"></property>
        <property name="address" ref="address1"></property>
    </bean>

    <bean id="address1" class="com.bihan.springstudy.Address">
        <property name="name" value="qingweigongguan"></property>
    </bean>

</beans>